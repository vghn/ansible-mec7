# The Bastion Host
Host bastion
  HostName home.ioni.ca
  Port 4822

# Remotes
Host spark
  HostName 192.168.1.77
  ProxyJump zodiac

Host hole
  HostName 192.168.1.99
  ProxyJump zodiac

Host nas
  HostName 192.168.1.63
  ProxyJump zodiac

Host rpi
  HostName 192.168.1.162
  ProxyJump zodiac

Host *
  User ansible
  IdentityFile deploy_rsa
  IdentitiesOnly yes
  StrictHostKeyChecking no
  GlobalKnownHostsFile /dev/null
  UserKnownHostsFile /dev/null
